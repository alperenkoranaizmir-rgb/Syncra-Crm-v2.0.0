[MASTER]
# Enable Django-aware checks
load-plugins=pylint_django
# Ignore migrations generated by Django (they often trigger naming/style warnings)
# Common pylint versions accept both `ignore` and `ignore-patterns`.
ignore=migrations
ignore-patterns=^.*/migrations/.*$

[FORMAT]
# Keep line length consistent with project lint expectations
max-line-length=100

[TYPECHECK]
# Help with dynamic Django attributes like model managers
generated-members=objects
